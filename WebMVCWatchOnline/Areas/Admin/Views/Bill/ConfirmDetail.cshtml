
@{
    ViewBag.Title = "XacNhanDonHang";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@using WebMVCWatchOnline.Models.Entities;
@model List<WebMVCWatchOnline.Models.Entities.Bill>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<h1 class="page-header">
    <a href="/Admin/Bill/Index" class="btn btn-outline btn-primary">Quay lại</a>
</h1>
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="table">
        <thead>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Khách hàng</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>SĐT</th>
                <th>Thời gian</th>
                <th>Tổng</th>
                <th>Chi tiết</th>
                <th>Duyệt</th>
                <th>Xóa</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                if (i % 2 == 0)
                {
                    <tr class="even gradeA">
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Customer_Name</td>
                        <td>@Model[i].Address</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].Number_phone</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].TotalMoney</td>
                        <td><a href="/Admin/Bill/Detail/@Model[i].Id" class="btn btn-outline btn-primary">Chi tiết</a></td>
                        <td><a href="/Admin/Bill/Duyet/@Model[i].Id" class="btn btn-outline btn-primary">Duyệt</a></td>
                        @*<td><a href="/QLHoaDon/SuaHd/@Model[i].MaHoaDon" class="btn btn-outline btn-primary">Sửa</a></td>*@
                        <td><a href="/Admin/Bill/Delete/@Model[i].Id" class="btn btn-outline btn-primary">Xóa</a></td>
                    </tr>
                }
                else
                {
                    <tr class="odd gradeA">

                        <td>@Model[i].Id</td>
                        <td>@Model[i].Customer_Name</td>
                        <td>@Model[i].Address</td>
                        <td>@Model[i].Email</td>
                        <td>@Model[i].Number_phone</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].TotalMoney</td>
                        <td><a href="/Admin/Bill/Detail/@Model[i].Id" class="btn btn-outline btn-primary">Chi tiết</a></td>
                        <td><a href="/Admin/Bill/Duyet/@Model[i].Id" class="btn btn-outline btn-primary">Duyệt</a></td>
                        @*<td><a href="/QLHoaDon/SuaHd/@Model[i].MaHoaDon" class="btn btn-outline btn-primary">Sửa</a></td>*@
                        <td><a href="/Admin/Bill/Delete/@Model[i].Id" class="btn btn-outline btn-primary">Xóa</a></td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/sb-admin-2.js"></script>


