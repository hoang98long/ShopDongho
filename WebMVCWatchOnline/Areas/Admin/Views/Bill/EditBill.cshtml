
@{
    ViewBag.Title = "SuaHd";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model WebMVCWatchOnline.Models.Entities.Bill
<h1 class="page-header">
    <a href="/Admin/Bill/Index" class="btn btn-outline btn-primary">Quay lại</a>
</h1>
<div class="row" style="margin-bottom: 50px">

    <div class="col-md-12">
        @using (Html.BeginForm("EditBill", "Bill", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmThem" }))
        {
            <div class="form-group input-group" style="display: block;">
                <label>Khách hàng</label>
                @Html.TextBoxFor(m => m.Customer_Name, new { @class = "form-control", placeholder = "Tên khách hàng", required = "required" })
            </div>

            <div class="form-group input-group" style="display: block;">
                <label>Địa chỉ</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Địa chỉ" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Số điện thoại</label>
                @Html.TextBoxFor(m => m.Number_phone, new { @class = "form-control", placeholder = "Số điện thoại", type = "number" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Thời gian giao</label>
                @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "Thời gian giao" })
            </div>
            <div style="float: left">
                <input type="submit" class="btn btn-outline btn-primary" value="Sửa" />
                <input type="reset" class="btn btn-outline btn-primary" value="Làm lại" />
            </div>
        }
    </div>

</div>

