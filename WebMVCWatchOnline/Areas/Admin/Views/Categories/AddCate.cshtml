
@using WebMVCWatchOnline.Models.Entities
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    //    ProductCategory modelCategory = new ProductCategory();
}

@model ProductCategory
<div style="height:100vh;  overflow-y:scroll;">
    <h1 class="page-header">
        <a href="/Admin/Category/Index" class="btn btn-outline btn-primary">Quay lại</a>
    </h1>
    <div class="row" style="margin-bottom: 50px;">

        <div class="col-md-12">

            @using (Html.BeginForm("AddCate", "Category", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmThem" }))
            {

                <div class="form-group input-group" style="display: block;">
                    <label>Tên hãng</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Tên hãng", required = "required" })
                </div>


                <div style="float: left">
                    <input type="submit" class="btn btn-outline btn-primary" value="Thêm" />
                    <input type="reset" class="btn btn-outline btn-primary" value="Làm lại" />
                </div>
            }
        </div>

    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>
<Script>
    CKEDITOR.replace('chitiet');
</Script>