
@using WebMVCWatchOnline.Models.Entities
@{
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
    //    ProductCategory modelCategory = new ProductCategory();
}

@model WebMVCWatchOnline.Models.Entities.User_
<h1 class="page-header">
    <a href="/User/Index" class="btn btn-outline btn-primary">Quay lại</a>
</h1>
<div class="row" style="margin-bottom: 50px">

    <div class="col-md-12">
        @using (Html.BeginForm("Add", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmThem" }))
        {
            <div class="form-group input-group" style="display: block;">
                <label>Tên người dùng</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Tên người dùng", required = "required" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
            </div>

            <div class="form-group input-group" style="display: block;">
                <label>Tên tài khoản</label>
                @Html.TextBoxFor(m => m.UserName, new { id = "mk", @class = "form-control", type = "password", placeholder = "Tên tài khoản" })
            </div>
            <div class="form-group input-group" style="display: block;">
                <label>Mật khẩu</label>
                @Html.TextBoxFor(m => m.Password, new { id = "mk", @class = "form-control", type = "password", placeholder = "Mật khẩu" })
            </div>
            <div style="float: left">
                <input type="submit" class="btn btn-outline btn-primary" value="Thêm" />
                <input type="reset" class="btn btn-outline btn-primary" value="Làm lại" />
            </div>
        }
    </div>

</div>



