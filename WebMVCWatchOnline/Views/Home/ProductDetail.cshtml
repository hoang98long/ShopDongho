                alert(json);
                window.location.reload();
            },
            error: function (err) {
                alert("Đã xảy ra lỗi"+err.responseText);
            }
        });
    };
    function Dangnhap() {
        $.ajax({
            url: '/Admin1/LogIn',
            type: 'POST',
            dataType: 'json',
        })
    }
</script>