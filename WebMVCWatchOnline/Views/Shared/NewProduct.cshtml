@using WebMVCWatchOnline.Models.Entities
@{
    ShopWatchContext shop = new ShopWatchContext();
    var sp = shop.Products.ToList().Skip(0).Take(10);
}

<div class="widget">
    <h3>Sản phẩm mới</h3>
    <div class="widget-article-list">

        @foreach (var item in sp)
        {
            <div class="item">
                <div class="item-header">

                    <a href="/Home/ProductDetail/@item.ProductID"><img src="@item.ProductImage" alt="" style="width: 50px;height: 50px"></a>
                </div>
                <div class="item-content">
                    <h4><a href="/Home/ProductDetail/@item.ProductID">@item.ProductName</a></h4>
                    <span class="item-meta">
                        <a href="#"><i class="fa fa-comment-o"></i>@item.CreatedDate</a>
                        <a href="#"><i class="fa fa-clock-o"></i>@item.ProductName</a>
                    </span>
                </div>
            </div>

        }


        <a href="/Home/Categories" class="button-read-more">Xem thêm</a>

    </div>
</div>